/* pages/posts/post-detail/post-detail-template.wxss */
.detail-container{
  display: flex;
  flex-direction: column;
  position: relative;
}
.head-image{
  width: 100%;
  height: 460rpx;
}

.msg-info{
  margin:10px 10px;
  display: flex;
  align-items: center;
  flex-direction: row;
  color:#4b556c;
}
.detail-author{
  width:60rpx;
  height: 60rpx;
  margin-right: 10px;
}

.audio{
  width:102rpx;
  height: 110rpx;
  position: absolute;
  left:50%;
  top:175rpx;
  margin-left:-51rpx;
  opacity: .6;
}

.const-text{
  margin-left:10rpx;
}

.date{
  margin-left:10rpx;
}
.title{
  margin-left:40rpx;
  font-size: 36rpx;
  letter-spacing: 2px;
  font-weight: 700;
  margin-top:30rpx;
  color:#4b556c;
}

.tool{
  margin-top:20rpx;
}

.circle-img{
  float: right;
  margin-right:40rpx;
}

.circle-img image {
  width:90rpx;
  height: 90rpx;
}

.share-img{
  margin-left:20rpx;
}

.horizon{
  width:660rpx;
  height:2rpx;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top:46rpx;
  margin:0 auto;
  z-index:-99;
}

.detail{
  letter-spacing: 2px;
  margin-top:20rpx;
  margin-left:30rpx;
  margin-right:30rpx;
  font-size: 24rpx;
  color:#666;
  line-height: 44rpx;
}